<nav class="uk-navbar-container uk-margin" uk-navbar="mode: click">
  <div class="uk-navbar-center">
    <ul class="uk-navbar-nav">
      <li><a href="/">Decks</a></li>
      <li><a class="add-card" href="#add-card" uk-toggle>Add Card</a></li>
      <li><a class="browse-cards" href="#all-cards" uk-toggle>All Cards</a></li>
    </ul>
  </div>
</nav>
</div>
<div id="all-cards" class="uk-flex-top uk-modal-container" uk-modal>
  <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
    <button class="uk-modal-close-default" type="button" uk-close></button>
    <div class="uk-grid-small uk-child-width-expand@s" uk-grid>
      <div>
        <div class="all-cards-table-container" style="height: 1000px; overflow: scroll;">
          <table class="uk-table uk-table-striped">
            <thead>
              <tr>
                <th>Front</th>
                <th>ID</th>
              </tr>
            </thead>
            <tbody class="all-cards-table-body">
            </tbody>
          </table>
        </div>
      </div>
      <div>
        <div class="all-cards-edit-card-container">
        </div>
      </div>
    </div>
  </div>
</div>
<div id="add-card" class="uk-flex-top" uk-modal>
  <div class="add-card-form-container uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
    <form class="add-card-form">
    </form>
  </div>
</div>
<div class="uk-section uk-padding-remove">
  <div class="uk-container">
    <h1 class="uk-text-center">{{ currentDeck.title }}</h1>
    <div id="card-count">
      <h4 class="uk-text-center uk-margin-remove">{{ currentDeck.cards.length }}
        {{#eq currentDeck.cards.length 1}}
          card
        {{else}}
          cards
        {{/eq}}
      </h4>
    </div>
    <div class="top-button-container uk-margin-top">
      {{#eq currentDeck.cards.length 0}}
        <button class="add-card uk-align-center uk-button uk-button-primary" href="#add-card" uk-toggle>Add First Card!</button>
        {{else}}
          <button class="study-now uk-align-center uk-button uk-button-primary">Study Now</button>
      {{/eq}}
    </div>
    {{#if expressFlash}}
      <div class="uk-alert-success uk-margin" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <p>{{ expressFlash }}</p>
      </div>
    {{/if}}
    <div class="success-container"></div>
    <div class="study-container uk-container uk-container-small uk-margin-bottom">
    </div>
  </div>
</div>
<!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.0.0/quill.js"></script>
<script src="/add-card.js"></script>
<script src="/study.js"></script>
<script src="/browse-cards.js"></script>
